{% if props.icon %}
  <div class="image">
    {% if props.url %}
      <a href="{{ props.url }}">{{ props.icon|raw }}</a>
    {% else %}
      {{ props.icon|raw }}
    {% endif %}
  </div>
{% endif %}
{% if props.has_label and props.label %}
  <div class="title"><h3>{{ props.label }}</h3></div>
{% endif %}
<div class="content"><div class="text">
  <span class="copy">{{ props.text|raw }}</span>
</div></div>
{% if props.url %}<a class="display-link" href="{{ props.url }}">&nbsp;</a>{% endif %}
